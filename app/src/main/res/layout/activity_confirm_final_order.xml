<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfirmFinalOrderActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="4343dp"
        android:layout_height="79886dp"
        android:layout_marginStart="-84dp"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="-80dp"
        android:layout_marginBottom="-90dp"
        android:alpha="0.2"
        android:src="@drawable/foodnoodlebg" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_margin="12dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:fontFamily="@font/acme"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Please Confirm Your Shipment Details" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <TextView
        android:ems="10"
        android:id="@+id/pricetv"
        android:layout_width="889px"
        android:layout_height="179px"
        android:background="@drawable/edittext"
        android:text="Total Price"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="23dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <EditText
        android:layout_marginTop="56dp"
        android:id="@+id/shippment_name"
        android:layout_width="889px"
        android:layout_height="176px"
        android:ems="10"    android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:hint="your Name" />

    <EditText
        android:id="@+id/shippment_phone"
        android:layout_width="889px"
        android:layout_height="176px"
        android:ems="10"    android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:hint="your Phone" />


    <EditText
        android:id="@+id/shippment_address"
        android:layout_width="889px"
        android:layout_height="176px"
        android:ems="10"
        android:layout_margin="12dp"
        android:background="@drawable/edittext"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPostalAddress"

        android:hint="your Shipping Address" />

    <EditText

        android:id="@+id/shippment_city"
        android:layout_width="889px"
        android:layout_height="176px"
        android:ems="10"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:hint="your City" />



    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="889px"
        android:layout_height="176px"
        android:backgroundTint="@color/teal_200"
        android:layout_gravity="center_horizontal"
        android:text="Place Order" />
</LinearLayout>


</RelativeLayout>